# Include important files in the distribution
include README.md
include CHANGELOG.md
include CONTRIBUTING.md
include LICENSE
include requirements.txt
include pyproject.toml
include setup.cfg

# Include package data
recursive-include nostr_tools *.py
recursive-include nostr_tools py.typed

# Include tests for development installations
recursive-include tests *.py

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .coverage
global-exclude .DS_Store
global-exclude .vscode
global-exclude *.egg-info
global-exclude build
global-exclude dist
global-exclude venv
global-exclude .venv
global-exclude .git
global-exclude .gitignore
global-exclude *.log
global-exclude .tox
global-exclude note.txt
global-exclude test.ipynb